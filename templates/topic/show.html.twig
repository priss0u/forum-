{% extends 'base.html.twig' %}

{% block title %}Topic{% endblock %}

{% block body %}
    <h1>Topic</h1>

    <table class="table">
        <tbody>

            <tr>
                <th>Title</th>
                <td>{{ topic.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ topic.description }}</td>
            </tr>
            <tr>
                <th>Date de creation</th>
                <td>{{ topic.creationDate ? topic.creationDate|date('d-m-y') : '' }}</td>
            </tr>
            <tr>
                <th>Date de modification</th>
                <td>{{ topic.modificationDate ? topic.modificationDate|date('d-m-y') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_topic_index') }}">Retour a la liste</a>

    <a href="{{ path('app_topic_edit', {'id': topic.id}) }}">Modifier</a>

    {{ include('topic/_delete_form.html.twig') }}
{% endblock %}
